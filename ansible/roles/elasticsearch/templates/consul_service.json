{
    "service": {
        {% if inventory_hostname in ["db-elasticsearch"] %}
        "name": "db-elasticsearch",
        {% else %}
        "name": "db-elasticsearch-staging",
        {% endif %}
        "tags": [
            "db"
        ],
        "port": 9200,
        "checks": [{
            "id": "es-ping",
            "http": "http://{{ ansible_host }}:5579/db_check/elasticsearch?consul=1",
            "interval": "15s",
            "failures_before_critical": 4
        }]
    }
}  
